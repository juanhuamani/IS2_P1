<div class="col-md-4 mx-auto">

    <div class="card">
        <div class="card-body">
            <form action="/events/edit/{{event.id}}" method="POST">
                <div class="form-group">
                    <input type="text" name="title" class="form-control" placeholder="Titulo" value="{{event.title}}" autofocus>
                </div>
                <div class="form-group">
                    <input type="url" name="url" class="form-control" placeholder="URL" value="{{event.url}}">
                </div>
                <div class="form-group">
                    <textarea name="description" rows="2" class="form-control" placeholder="Descripcion">{{event.description}}</textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-success btn-block">
                        Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>